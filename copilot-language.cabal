cabal-version:       >=1.10
name:                copilot-language
version:             0.1
synopsis:            A Haskell-embedded DSL for monitoring hard real-time distributed systems.
description:         Blah blah blah...
license-file:        LICENSE.txt
author:              Lee Pike, Robin Morisset, Alwyn Goodloe, Sebastian Niller, Nis Nordby Wegmann
maintainer:          niswegmann@gmail.com
stability:           Experimental
category:            Language, Embedded
build-type:          Simple

library
  default-language: Haskell2010

  hs-source-dirs: src

  build-depends:
    array,
    base >= 4,
    copilot-core,
    containers,
    deepseq,
    fgl >= 5.4,
    type-equality >= 0.1,
    type-level-numbers >= 0.1.0.2

  exposed-modules:
    Language.Copilot
    Language.Copilot.Interface
    Language.Copilot.Interface.Prelude
    Language.Copilot.Interface.Reify

  other-modules:
--    Language.Copilot.Interface.DynMap
    Language.Copilot.Interface.DynStableName
    Language.Copilot.Interface.Stream
    Language.Copilot.Interface.Validate

  ghc-options:
    -fwarn-tabs
    -O2
    -auto-all
    -caf-all
    -Wall
